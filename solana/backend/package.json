{
    "name": "whitelisting-backend",
    "version": "v3.0.4",
    "description": "Express backend server for whitelisting portal",
    "main": "dist/index",
    "typings": "dist/index",
    "scripts": {
        "setup": "npm run setEnv && npm run build && npm run newdb",
        "newdb": "npm run start -- --newdb",
        "setup-noenv": "npm run build && npm run start -- --newdb && npm run setUI",
        "setEnv": "if [ -e .env.staging ]; then cp .env.staging .env; fi",
        "setUI": "mkdir -p public && mkdir -p dist/public && cp -R ../client/dist/* public && cp -R public/* dist/public",
        "start": "node dist/app.js",
        "dev": "nodemon src/app.ts",
        "build": "tsc -p .",
        "bootstrap": "npm run start -- --bootstrap",
        "activateSubscription": "nodemon src/services/activateSubscription.ts",
        "bootstrapPlan": "nodemon src/services/bootstrapPlans.ts",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'  --require src/app.ts"
    },
    "author": "Vishwas Anand Bhushan",
    "license": "MIT",
    "dependencies": {
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dashify": "^2.0.0",
        "dotenv": "^8.2.0",
        "exceljs": "^4.2.1",
        "express": "^4.17.1",
        "express-validator": "^6.12.0",
        "hs-ssi-sdk": "^5.0.1",
        "https-localhost": "^4.6.5",
        "hypersign-auth-js-sdk": "^2.0.6",
        "mongoose": "^5.12.3",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.5.0",
        "simple-node-logger": "^18.12.24",
        "twit": "^2.2.11",
        "url-parse": "^1.5.1",
        "uuid": "^8.3.2",
        "web3": "^1.3.6"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/chai-http": "^4.2.0",
        "@types/express": "^4.17.6",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.0.23",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.4.0"
    }
}
